[init]
  defaultBranch = main
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[user]
  email = {{ env "GITHUB_EMAIL" }}
  name = {{ env "GITHUB_USER" }}
  signingkey = 44703707F9B90BDE
[color]
  ui = true
[core]
  autocrlf = input
  quotepath = false
  excludesfile = ~/.config/git/ignore
  pager = delta --$(~/.local/bin/background)
[fetch]
  recurseSubmodules = true
[diff]
  tool = nvimdiff
  colorMoved = default
[difftool]
  prompt = false
[interactive]
  diffFilter = delta --$(~/.local/bin/background) --color-only --features=interactive
[delta]
  navigate = true
  features = decorations unobtrusive-line-numbers
  tabs = 2
  hyperlinks = true
[delta "interactive"]
  keep-plus-minus-markers = false
[delta "unobtrusive-line-numbers"]
  line-numbers = true
[delta "decorations"]
  commit-decoration-style = ol
  commit-style = raw
  file-decoration-style = ol
  hunk-header-style = syntax ul
  hunk-header-decoration-style = omit
[merge]
  tool = nvimdiff
  conflictStyle = diff3
[pull]
  ff = only
[gitflow "branch"]
  master = main
  develop = develop
[gitflow "prefix"]
  feature = feature/
  release = release/
  hotfix = hotfix/
  support = support/
  versiontag = v
